<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "ClinGen Data Model" %></title>
    
    <%= stylesheet_link_tag "bootstrap", "bootstrap-theme" %>
    <%= javascript_include_tag  "bootstrap" %>
  </head>
  
  <body class="<%= page_classes %>">
    <div class="container">
      <div class="row">
	<div class="col-md-4">
	    <% data.models.names.each do |model| %>
	    <h4><%= link_to "#{model}", "/#{model}" %></h4>
	    <dl>
	    <dt>resource</dt>
	    <% sitemap.resources.select{|r| r.path =~ /^#{model}\/resource/}.sort{|a,b| a.data.title <=> b.data.title}.each do |r| %>
	    <dd><%= link_to r.data.title, r.url %></dd>
	    <% end %>
	    <dt>conceptual</dt>
	    <% sitemap.resources.select{|r| r.path =~ /^#{model}\/conceptual/}.each do |r| %>
	    <dd><%= link_to r.data.title, r.url %></dd>
	    <% end %>
	    <% end %>
	  </dl>
	</div>
	<div class="col-md-8">
	  <h1><%= current_page.data.title %></h1>
	  <% if current_page.data.description %>
	  <p class="lead">
	    <%= current_page.data.description %>
	  </p>
	  <% end %>
	  <%= yield %>
	</div>
      </div>
    </div>
  </body>
</html>
