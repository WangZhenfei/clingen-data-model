<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "ClinGen Data Model" %></title>
    
    <%= stylesheet_link_tag "bootstrap", "bootstrap-theme" %>
    <%= javascript_include_tag  "bootstrap" %>
  </head>
  
  <body class="<%= page_classes %>">
    <div class="container">
      <div class="col-md-4">
	<h3><%= link_to "allele model", "/" %></h3>
	<ul>
	  <% sitemap.resources.select{|r| r.path =~ /^allele/}.sort{|a,b| a.data.title <=> b.data.title}.each do |r| %>
	  <li><%= link_to r.data.title, r.url %></li>
	  <% end %>
	</ul>
      </div>
      <div class="col-md-8">
	<h1><%= current_page.data.title %></h1>
	<%= yield %>
      </div>
    </div>
  </body>
</html>
